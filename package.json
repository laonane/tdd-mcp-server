{
  "name": "tdd-mcp-server",
  "version": "1.0.0",
  "description": "Test Driven Development MCP Server - Provides TDD workflow support for AI tools",
  "main": "dist/server.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "tdd",
    "test-driven-development",
    "mcp",
    "model-context-protocol",
    "ai-tools",
    "testing",
    "typescript"
  ],
  "author": "TDD MCP Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.5",
    "uuid": "^11.1.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@types/micromatch": "^4.0.6",
    "@types/node": "^20.11.17",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "templates",
    "best-practices"
  ],
  "bin": {
    "tdd-mcp-server": "./dist/server.js"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
